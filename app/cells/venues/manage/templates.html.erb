
<script type="text/template" id="room-setup-layout-template">
<section>
    <div id="room-setup-control-div"></div>
    <div id="room-setup-region-div"></div>
</section>
</script>

<script type="text/template" id="room-control-template">
    <button class="add-model-button btn btn-primary btn-mini pull-left">New Room</button>
</script>

<script type="text/template" id="room-setup-control-template">
<div>
    <button class="add-model-button btn-mini btn-primary pull-right ">
        add setup
    </button>
</div>
</script>

<script type="text/template" id="room-setup-template">
<li class="span4 clearfix">
    <div class="thumbnail clearfix">
        <div class="caption" class="pull-left">
            <button class="model-delete-button btn btn-primary btn-mini pull-right">
                <i class="icon-trash"></i>
            </button>
            <button class="model-edit-button btn btn-primary btn-mini pull-right">
                <i class="icon-pencil"></i>
            </button>
            <small>
                <dl class="dl-horizontal-small">
                    <dt><%= t :setup %></dt>
                    <dd>{{= setup_type_name ? setup_type_name : "&nbsp;" }}</dd>
                    <dt><%= t :capacity %></dt>
                    <dd>{{= capacity ? capacity : "&nbsp;" }}</dd>
                    <dt><%= t :isdefault %></dt>
                    <dd>{{= id == room.setup_id  }}</dd>
                </dl>
            </small>
        </div>
    </div>
</li>
</script>
