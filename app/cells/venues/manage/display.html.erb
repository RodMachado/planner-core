
<%= render_cell "venues/manage", :javascript %>

<%= render_cell "venues/venue_list", :javascript,
    :caption => "venues",
    :selectNotifyMethod => "RoomApp.RoomManagement.selectRoom"
    %>

<%= render_cell "venues/room_list", :javascript,
    :caption => "rooms",
    :selectNotifyMethod => "RoomApp.RoomManagement.showSetups",
    :modelType => "RoomApp.RoomManagement.Room",
    :showControls => true
    %>
    
<%= render_cell "venues/manage", :templates %>
<%= render_cell "venues/venue_list", :templates %>

<!--
    On Select we want to change the URL for the room grid so that only the rooms for that venue are shown
    When the room grid is first displayed we do not want to display any rooms unless a venue is selected
    -->    

<div class="row" id="venues-management-main-row">
    <div class="col-md-3" style="overflow : auto; padding-left:0;" >
        <%= render_cell "venues/venue_list", :display %>
    </div>
    <div class="col-md-9">
        <h3 class="h3-underlined"><%= t "rooms" %></h3>
        <%= render_cell "venues/room_list", :display %>
        <div id="room-control"></div>
        <div id="room-setup-view"></div>
    </div>
</div>