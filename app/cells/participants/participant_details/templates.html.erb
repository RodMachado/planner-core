<script type="text/template" id="tag-context-layout-template">
    <div class="thumbnail clearfix">
        <button class="model-add-tag-button btn btn-primary btn-mini pull-right" tagcontext="{{= context }}">Add</button>
        <span class="label label">{{= context }}</span>
        {{ _.each(tags, function(tag) { }}
            <span class="label label-info">{{= tag }} <a href="{{= '/tags/' + person_id + '/remove?class=Person&context=' + context + '&tag=' + tag }}" class="tag-remove-link"><i class="icon-remove"></i></a></span>
        {{ }); }}
    </div>
</script>

<script type="text/template" id="tag-cloud-context-layout-template">
        <div class="accordion-heading">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#participant-tag-cloud-parent" href="#{{= context }}">
                {{= context }}
            </a>
        </div>
        <div id="{{= context }}" class="accordion-body collapse">
            <div class="accordion-inner">
            {{ _.each(tags, function(tag) { }}
                <span class="label label-info label-mini">{{= tag.name }} {{= tag.count }}</span>
            {{ }); }}
            </div>
        </div>    
</script>

