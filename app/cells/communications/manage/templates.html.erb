        <dt><button class="btn btn-primary add-people-button pull-left"><i class="glyphicon glyphicon-chevron-right"></i></button></dt>
        <dt><button class="btn btn-primary remove-people-button pull-left"><i class="glyphicon glyphicon-chevron-left"></i></button></dt>
    </dl>    
</script>
