
<script type="text/template" id="mailing-data-template">
    <dl class="dl-horizontal">
        <dt><%= t "mail-mailing-number" %></dt><dd>{{= mailing_number }}</dd>
        <dt><%= t "mail-mailing-template" %></dt><dd>{{= mail_template ? mail_template : "&nbsp;" }}</dd>
        <dt><%= t "mail-mail-usage" %></dt><dd>{{= mail_use ? mail_use : "&nbsp;" }}</dd>
        <dt><%= t "mail-scheduled" %></dt><dd>{{= scheduled ? '<%= t "yes" %>' : '<%= t "no" %>' }}</dd>
        <dt><%= t "mail-test-run" %></dt><dd>{{= testrun ? '<%= t "yes" %>' : '<%= t "no" %>' }}</dd>
    </dl>
</script>

<script type="text/template" id="preview-control-view-template">
    <button class="btn btn-primary preview-mail-button pull-left">Preview</button>
</script>

<script type="text/template" id="list-control-view-template">
