<script type="text/template" id="survey-question-list-layout-template">
<section>
    <div class="row-fluid">
        <div class="span1"><span class="label label-big"><%= t 'Questions' %></span></div><div id="survey-question-control-div"></div>
    </div>
    <div class="row-fluid">
        <div id="survey-question-region-div"></div>
    </div>
</section>
</script>

<script type="text/template" id="survey-question-template">
    <td class='span10'>
    <a href="#survey-question-tab" data-toggle="tab" class="model-select-button">
        {{= question }}
    </a>
    </td>
    <td>
        <button class="model-delete-button btn btn-mini"><i class="icon-trash"></i></button>
    </td>
</script>

<script type="text/template" id="survey-question-control-template">
    <button class="add-model-button btn-mini btn-primary pull-right">
        <%= t 'add question' %>
    </button>
</script>

<script type="text/template" id="question-data-template">
    <dl class="dl-horizontal">
        <dt><%= t "question" %></dt><dd>{{= question ? question : "&nbsp;" }}</dd> 
        <dt><%= t "sort_order" %></dt><dd>{{= sort_order ? sort_order : "&nbsp;" }}</dd>
        <dt><%= t "tags_label" %></dt><dd>{{= tags_label ? tags_label : "&nbsp;" }}</dd>
        <dt><%= t "question_type" %></dt><dd>{{= question_type ? question_type : "&nbsp;" }}</dd>
        <dt><%= t "answer_type" %></dt><dd>{{= answer_type ? answer_type : "&nbsp;" }}</dd>
    </dl>
</script>
