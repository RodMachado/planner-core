<script type="text/template" id="survey-group-list-layout-template">
<section>
    <div class="row-fluid">
        <div class="span1"><span class="label label-big"><%= t 'Groups' %></span></div><div id="survey-group-control-div"></div>
    </div>
    <div class="row-fluid">
        <div id="survey-group-region-div"></div>
    </div>
</section>
</script>

<script type="text/template" id="survey-group-template">
    <td class='span10'>
    <a href="#survey-group-tab" data-toggle="tab" class="model-select-button">
        {{= name}}
    </a>
    </td>
    <td>
        <button class="model-drill-down-button btn btn-mini"><i class="icon-arrow-right"></i></button>
    </td>
    <td>
        <button class="model-delete-button btn btn-mini"><i class="icon-trash"></i></button>
    </td>
</script>

<script type="text/template" id="survey-group-control-template">
    <button class="add-model-button btn-mini btn-primary pull-right">
        <%= t 'add group' %>
    </button>
</script>

<script type="text/template" id="group-data-template">
    <dl class="dl-horizontal">
        <dt><%= t "name" %></dt><dd>{{= name ? name : "&nbsp;"}}</dd>
        <dt><%= t "altname" %></dt><dd>{{= altname ? altname : "&nbsp;"}}</dd>
        <dt><%= t "description" %></dt><dd>{{= description ? description : "&nbsp;"}}</dd>
        <dt><%= t "sort_order" %></dt><dd>{{= sort_order ? sort_order : "&nbsp;"}}</dd>
        <dt><%= t "Help Text" %></dt><dd>{{= survey_format.help ? survey_format.help : "&nbsp;"}}</dd>
    </dl>
</script>
