<script type="text/template" id="query-layout-template">
<section>
    <div id="query-control-div"></div>
    <div id="query-region-div"></div>
</section>
</script>

<script type="text/template" id="query-view-template">
    <div class="row">
        <div class="col-xs-12">
            <button class="model-edit-button btn btn-primary btn-xs pull-right">
                <%= t "Edit" %>
            </button>
            <dl class="dl-horizontal">
                <dt><%= t "name" %></dt><dd>{{= name ? name : "&nbsp;" }}</dd>
                <dt><%= t "survey" %></dt><dd>{{= survey_id ? survey_name : "&nbsp;" }}</dd>
                <dt><%= t "shared" %></dt><dd>{{= shared ? '<%= t "yes" %>' : '<%= t "no" %>' }}</dd>
            </dl>
        </div>
    </div>
    <div class="row">
        <b>{{= operation ? operation : "&nbsp;" }}</b> of the following:
            <button class="model-select-button btn btn-primary pull-right">
                <%= t "Run" %>
            </button>
    </div>
    <div class="row">
        {{ _.each(survey_query_predicates, function(predicate) { }}
        <div class="thumbnail clearfix">
            <small>
                "{{= predicate.survey_question_name }}"
                <b>{{= predicate.operation }}</b>
                {{= predicate.value }}
            </small>
        </div>
        {{ }); }}
    </div>
</script>

<script type="text/template" id="predicate-data-template">
    {{= question }} {{= item.operation }} {{= item.value }}
</script>

<script type="text/template" id="query-results-template">
    <table id="results-t" class="result-table"><tr><td/></tr></table>
    <div id="result-pager"></div>
</script>
