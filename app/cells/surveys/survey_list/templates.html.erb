
<script type="text/template" id="survey-list-layout-template">
<section>
    <div class="row">
        <div class="col-xs-1">
            <span class="label label-default"><%= t 'Surveys' %></span>
        </div>
        <div class="col-xs-11">
            <div id="survey-control-div"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
        <div id="survey-region-div"></div>
        </div>
    </div>
</section>
</script>

<script type="text/template" id="survey-template">
    <td>
        <a href="#survey-tab" data-toggle="tab" class="model-select-button">{{= name}}</a>
    </td>
    <td>
        <button class="model-preview-button btn btn-xs"><i class="icon-eye-open"></i></button>
    </td>
    <td>
        <button class="model-drill-down-button btn btn-xs"><i class="icon-arrow-right"></i></button>
    </td>
    <td>
        <button class="model-delete-button btn btn-xs"><i class="icon-trash"></i></button>
    </td>
</script>

<script type="text/template" id="survey-control-template">
    <button class="add-model-button btn-xs btn-primary pull-right">
        <%= t 'add survey' %>
    </button>
</script>

<script type="text/template" id="survey-data-template">
    <dl class="dl-horizontal">
        <dt><%= t "Name" %></dt><dd>{{= name ? name : "&nbsp;" }}</dd>
        <dt><%= t "Alias" %></dt><dd>{{= alias ? alias : "&nbsp;"}}</dd>
        <dt><%= t "Public" %></dt><dd>{{= public ? 'Yes' : 'No' }}</dd>
        <dt><%= t "Authenticate" %></dt><dd>{{= authenticate ? 'Yes' : 'No' }}</dd>
        <dt><%= t "Use Captcha" %></dt><dd>{{= use_captcha ? 'Yes' : 'No' }}</dd>
        <dt><%= t "Welcome Message" %></dt><dd>{{= welcome ? welcome : "&nbsp;"}}</dd>
        <dt><%= t "Thank You Message" %></dt><dd>{{= thank_you ? thank_you : "&nbsp;"}}</dd>
        <dt><%= t "Submit String" %></dt><dd>{{= submit_string ? submit_string : "&nbsp;"}}</dd>
        <dt><%= t "URL For Header Image" %></dt><dd>{{= header_image ? header_image : "&nbsp;"}}</dd>
    </dl>
</script>
