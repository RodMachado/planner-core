                    <div class="accordion-inner">
                        <div id="schedule-region-div"></div>
                    </div>
                </div>
            </div>
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a href="#room-conflicts" data-parent="#conflicts-parent" data-toggle="collapse" class="accordion-toggle"> Room Conflicts </a>
                </div>
                <div class="accordion-body collapse" id="room-conflicts">
                    <div class="accordion-inner">
                        <div id="room-region-div"></div>
                    </div>
                </div>
            </div>
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a href="#excluded-item-conflicts" data-parent="#conflicts-parent" data-toggle="collapse" class="accordion-toggle"> Item Conflicts </a>
                </div>
                <div class="accordion-body collapse" id="excluded-item-conflicts">
                    <div class="accordion-inner">
                        <div id="excluded-item-region-div"></div>
                    </div>
                </div>
            </div>
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a href="#excluded-time-conflicts" data-parent="#conflicts-parent" data-toggle="collapse" class="accordion-toggle"> Time Conflicts </a>
                </div>
                <div class="accordion-body collapse" id="excluded-time-conflicts">
                    <div class="accordion-inner">
                        <div id="excluded-time-region-div"></div>
                    </div>
                </div>
            </div>
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a href="#availability-conflicts" data-parent="#conflicts-parent" data-toggle="collapse" class="accordion-toggle"> Availability Conflicts </a>
                </div>
                <div class="accordion-body collapse" id="availability-conflicts">
                    <div class="accordion-inner">
                        <div id="availability-region-div"></div>
                    </div>
                </div>
            </div>
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a href="#back-to-back-conflicts" data-parent="#conflicts-parent" data-toggle="collapse" class="accordion-toggle"> Back to Back </a>
                </div>
                <div class="accordion-body collapse" id="back-to-back-conflicts">
                    <div class="accordion-inner">
                        <div id="back-to-back-region-div"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>        
    </section>
</script>

<script type="text/template" id="schedule-view-template">
    <div class="thumbnail clearfix">
        <small class='conflict'>
            <b>{{= person_name }}</b> <%= t "has a conflict" %> <br/>
            {{= room_name}}: <b>{{= item_title }}</b> ({{= item_role}}) <%= t "at" %> {{= moment(item_start).format("h:mma dddd") }} <br/>
            <%=t "with" %> <br/>
            {{= conflict_room_name}}: <b>{{= conflict_item_title }}</b> ({{= conflict_item_role}}) <%= t "at" %> {{= moment(conflict_start).format("h:mma dddd")}}
        </small>
    </div>
</script>
<script type="text/template" id="room-view-template">
    <div class="thumbnail clearfix">
        <small class='conflict'>
            <%= t "Room" %> <b>{{= room_name}}</b> <%= t "at" %> {{= moment(item_start).format("h:mma dddd") }} <br/>
            <i>{{= item_title }}</i> <%= t "conflicts with" %>
            <i>{{= conflict_item_title }}</i> 
        </small>
    </div>
</script>
