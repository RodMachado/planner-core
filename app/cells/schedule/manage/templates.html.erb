<script type="text/template" id="conflict-layout-template">
    <section>
<div style="height : 370px; overflow : auto;" class="collapse-group"> <!-- TODO - move this to the style sheet -->
    <div class="collapse in" id="conflict-list">
        <div class="accordion" id="conflicts-parent">
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a href="#schedule-conflicts" data-parent="#conflicts-parent" data-toggle="collapse" class="accordion-toggle"> Schedule Conflicts</a>
                </div>
