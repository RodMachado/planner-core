<!-- TODO: extend so that the class of the cell can be passed as an option -->
<%= render_cell "items/item_list", :javascript,
    :caption => "unscheduled-program-items", 
    :pager => "#items-pager",
    :del => false,
    :edit => false,
    :add => false,
    :format_name => false,
    :duration => false,
    :room => false,
    :day => false,
    :time => false,
    :ref_number => false,
    :ignoreScheduled => true,
    :include_children => false,
    :showControls => false,
    :loadNotifyMethod => "ScheduleApp.ItemManagement.onItemLoad"
    # :selectNotifyMethod => "ItemApp.PeopleManagement.showProgrammeItem"
    # :modelType => "ItemApp.ItemManagement.ProgramItem",
%>

<%= render_cell "schedule/manage", :javascript %>
<%= render_cell "schedule/manage", :templates %>

<nav id="menu" class="panel-drawer" role="navigation">
    <div id="room-filter-menu"></div>
</nav>
<div class="row">
    <div class="col-sm-4">
        <div class="row">
            <div class="col-xs-12 left-jqgrid">
                <%= render_cell "items/item_list", :display %>
            </div>
        </div>
        <div class="row row-buffer voffset20">
            <div class="col-xs-12">
                <div id="conflict-view"></div>
            </div>
        </div>
    </div>
    <div class="col-sm-8" id="program-item-view">
        <% if @browser.ie? %>
            <div class="jumbotron">
                <p>The Scheduling Grid functionality will not work with Internet Explorer at the current time. In the mean time you may use an <a href="http://whatbrowser.org/">alternate browser</a> to use the scheduling grid.</p>
            </div>
        <% else %>
            <div class="row">
                <div class="col-xs-12" id="grid-day-control-view"></div>
                    <div id="room-filter-view"></div>
            </div>
            <div class="row">
                <div class="well col-xs-12" id="grid-view">
                </div>
            </div>
        <% end %>
    </div>
</div>
