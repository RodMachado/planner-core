/* Styles for the header logo */
#event-planner-logo-link-container {
	height: 67px;
	width: 300px;
	margin-left: 10px;
	background: url('http://fastmedia.grenadine.co/Grenadine-Event-Planner-4-67.png') 0 0 no-repeat;
}
@media
screen and (-webkit-min-device-pixel-ratio: 1.5),
screen and (-moz-min-device-pixel-ratio: 1.5),
screen and (min-device-pixel-ratio: 1.5) {
	#event-planner-logo-link-container {
		background: url('http://fastmedia.grenadine.co/Grenadine-Event-Planner-4-124.png') 0 0 no-repeat;
		background-size: 100%;
	}
}

/* Styles for the login form */
#login-form {
	width: auto;
	padding-left: 15px;
	padding-right: 15px;
  max-width: 350px;
  margin-left: auto;
  margin-right: auto;
}
.login-field {
	position:relative;
	min-width: 30px;
}
#login-form-text-helpers {
  text-align: center;
}

/* Styles for the menus and headers in the app */
#app-menu-div ul {
	width: 100%;
	margin-left: 0;
	margin-right: 0;
}
#app-menu-div.affix {
  top: 4px;
  z-index:799;
  width:100%;
}

#app-sub-menu-div.affix {
  /* top: 4px; */
  z-index:800;
  width:100%;
}
#application-header {
  background-color: white;
  margin-top: 0px;
  margin-bottom: 3px;
  
 }
 #logo-bar.gradient {
   top:4px;
   width: 100%;
   z-index:800;
   background: url(data:image/svg+xml;base64,);
   background: -moz-linear-gradient(45deg,  rgba(255,255,255,0.05) 19%, rgba(255,255,255,0.14) 27%, rgba(192,31,63,1) 100%);
   background: -webkit-gradient(linear, left bottom, right top, color-stop(19%,rgba(255,255,255,0.05)), color-stop(27%,rgba(255,255,255,0.14)), color-stop(100%,rgba(192,31,63,1)));
   background: -webkit-linear-gradient(45deg,  rgba(255,255,255,0.05) 19%,rgba(255,255,255,0.14) 27%,rgba(192,31,63,1) 100%);
   background: -o-linear-gradient(45deg,  rgba(255,255,255,0.05) 19%,rgba(255,255,255,0.14) 27%,rgba(192,31,63,1) 100%);
   background: -ms-linear-gradient(45deg,  rgba(255,255,255,0.05) 19%,rgba(255,255,255,0.14) 27%,rgba(192,31,63,1) 100%);
   background: linear-gradient(45deg,  rgba(255,255,255,0.05) 19%,rgba(255,255,255,0.14) 27%,rgba(192,31,63,1) 100%);
   filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#0dffffff', endColorstr='#c01f3f',GradientType=1 );
   border:0px;
 }
 #event-planner-logo-link-container {
   padding:0 0 0 10px;
 }
#grenadine-collapsed-button
{
    background-color: #F8F8F8;
    border-color: #E7E7E7;
}
#grenadine-collapsed-button span.icon-bar
{
  background-color:#C01F3F;
  opacity: 0.3;
}
#collapse-1 a {
  color: #676767
}
#top-colored-line {
    background-color: #C01F3F;
    position: fixed; 
    height: 4px; 
    top: 0; 
    left: 0; 
    width: 100%; 
    z-index: 801;
}
#logo-bar {
  margin-bottom:0;
  border-radius: 0px;
}
#grenadine-sub-application-menu,
#grenadine-application-menu {
  border-radius:0px;
  box-shadow: 0 3px 8px rgba(0, 0, 0, 0.2);
  border: 0px 0px 0px 0px;
  margin-bottom: 0px;
}
@media all and (max-width: $w2) {
	#grenadine-application-menu {
		box-shadow: none;
		z-index: 810;
	}
	#grenadine-sub-application-menu {
	  z-index: 799;
	}	
}
#grenadine-sub-application-menu {
  margin-top: -1px;
  margin-bottom: 20px;
}
/* This is the case when we have only enough space for the fully-collapsed menu */
  #user-menu {
    height: 50px;
  }
  #app-menu-div.affix {
    z-index: 801;
    width: 100%;
  }
  #app-sub-menu-div.affix {
	top: 54px;
	z-index: 800;
	width:100%;
  }
/* This is the case when we have only enough space for the medium toolbar but on 2 separate lines. In this case we can use a large font. */
@media all and (min-width: $w2)
{
  #user-menu {
    height: 100px;
  }
  #app-sub-menu-div.affix {
  top: 104px;
  z-index:802;
  width:100%;
  }
  #collapse-2 {
  	font-size: 14px;
  }
}
/* This is the case when we have only enough space for the medium toolbar but on 1 single line, for English text */
@media all and (min-width: $w3)
{
  body:lang(en) #user-menu {
    height: 50px;
  }
  body:lang(en) #app-sub-menu-div.affix {
	  top: 54px;
	  z-index:802;
	  width:100%;
  }
  body:lang(en) #collapse-2 {
  	font-size: 12px;
  }
}
/* This is the case when we have only enough space for the medium toolbar but on 1 single line, for French text */
@media all and (min-width: $w3f)
{
  body:lang(fr) #user-menu {
    height: 50px;
  }
  body:lang(fr) #app-sub-menu-div.affix {
	  top: 54px;
	  z-index:802;
	  width:100%;
  }
  body:lang(fr) #collapse-2 {
  	font-size: 12px;
  }
}
/* This is the best-case scenario, the case when we have enough space for the full-size toolbar, for English */
@media all and (min-width: $w4) 
{
  body:lang(en) #user-menu {
    height: 50px;
  }
  body:lang(en) #app-sub-menu-div.affix {
	  top: 54px;
	  z-index:802;
	  width:100%;
  }
  body:lang(en) #collapse-2 {
  	font-size: 14px;
  }
}
/* This is the best-case scenario, the case when we have enough space for the full-size toolbar, for French */
@media all and (min-width: $w4f) 
{
  body:lang(fr) #user-menu {
    height: 50px;
  }
  body:lang(fr) #app-sub-menu-div.affix {
	  top: 54px;
	  z-index:802;
	  width:100%;
  }
  body:lang(fr) #collapse-2 {
  	font-size: 14px;
  }
}
