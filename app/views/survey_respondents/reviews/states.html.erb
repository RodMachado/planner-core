<div class='copy-form'>
<% form_tag('/survey_respondents/reviews/'+@respondentId+'/copySurvey') do %>
	<%= check_box_tag(:name, 1, false, :disabled => @copyStatus ? @copyStatus.nameCopied : false) %> <%= label_tag(:name, "Name") %><br/>
	<%= check_box_tag(:pseudonym, 1, false, :disabled => @copyStatus ? @copyStatus.pseudonymCopied : false) %> <%= label_tag(:pseudonym, "Pub Name") %><br/>
	<%= check_box_tag(:address, 1, false, :disabled => @copyStatus ? @copyStatus.addressCopied : false) %> <%= label_tag(:address, "Address") %><br/>
	<%= check_box_tag(:phone, 1, false, :disabled => @copyStatus ? @copyStatus.phoneCopied : false) %> <%= label_tag(:phone, "Phone") %><br/>
	<%= check_box_tag(:email, 1, false, :disabled => @copyStatus ? @copyStatus.emailCopied : false) %> <%= label_tag(:email, "Email") %><br/>
	<%= check_box_tag(:tags, 1, false, :disabled => @copyStatus ? @copyStatus.tagsCopied : false) %> <%= label_tag(:tags, "Tags") %><br/>
	<%= submit_tag("Copy") %> 
<% end %> 
</div>
