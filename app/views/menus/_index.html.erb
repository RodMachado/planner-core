 <% menu.menu_items.each do |menu_item|%>	
 <li class="">
    <a href="<%= menu_item.path%>"><%= menu_item.name%></a>
    <div class="dropdown">        
    <% if !menu_item.menu_items.empty? %>
       <a class="dropdown-toggle" data-toggle="dropdown" href="#">+ ...</a>
       <ul class="dropdown-menu" >
          <% menu_item.menu_items.each do |sub_menu_item| %>     
             <li><a href="<%= sub_menu_item.path%>"><%= sub_menu_item.name%></a></li>       
          <% end %>
       </ul>
    <% end %>
    </div>        
 </li>
 <% end %>
