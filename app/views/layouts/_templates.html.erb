<script type="text/template" id="table-control-template">
    <button class='add-model-button btn btn-primary btn-xs toolbar-button'><%= t "New" %></button>
    <button class='edit-model-button btn btn-primary btn-xs toolbar-button'><%= t "Edit" %></button>
    <button class='delete-model-button btn btn-primary btn-xs toolbar-button'><%= t "Delete" %></button>
</script>

<script type="text/template" id="modal-info-template">
<div class="modal-dialog">
<div class="modal-content">
<form>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
            ×
        </button>
        <h4 id="myModalLabel" class="modal-title">{{= title }}</h4>
    </div>
    <div class="modal-body" id="modal-body"></div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">
            <%= t "ok" %>
        </button>
    </div>
</form>
</div>    
</div>    
</script>


<script type="text/template" id="modal-edit-template">
<div class="modal-dialog">
<div class="modal-content">
<form>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
            ×
        </button>
        <h4 id="myModalLabel">{{= title }}</h4>
    </div>
    <div class="modal-body" id="modal-body"></div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">
            <%= t "Cancel" %>
        </button>
        <button class="btn btn-primary">
            <%= t "Save Changes" %>
        </button>
    </div>
</form>
</div>    
</div>    
</script>

<script type="text/template" id="item-edit-template">
<form>
    <div class="row">
        <div class="col-xs-12">
            <div class="pull-right">
                <button class="btn btn-primary model-edit-button">
                    <%= t "Edit" %>
                </button>
                <button class="btn btn-primary model-cancel-button">
                    <%= t "Cancel" %>
                </button>
                <button class="btn btn-primary model-submit-button">
                    <%= t "Save Changes" %>
                </button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="model-body" id="model-body"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="pull-right">
                <button class="btn btn-primary model-edit-button">
                    <%= t "Edit" %>
                </button>
                <button class="btn btn-primary model-cancel-button">
                    <%= t "Cancel" %>
                </button>
                <button class="btn btn-primary model-submit-button">
                    <%= t "Save Changes" %>
                </button>
            </div>
        </div>
    </div>
</form>
</script>

