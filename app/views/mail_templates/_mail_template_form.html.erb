
<% form_for(@mail_template, :html => {:'accept-charset' => 'UTF-8'}) do |f| %>
    <%= f.error_messages %>
    <div class='line'><div class='field_name'>Use</div><div class='field_value'>
                <%= f.select :mail_use_id,
                MailUse.find(:all).collect {|r| [r.name,r.id] },
                {:include_blank => false} %>
    </div></div>
    <div class='line'><div class='field_name'>Survey</div><div class='field_value'>
                <%= f.select :survey_id,
                Survey.find(:all).collect {|r| [r.name,r.id] },
                {:include_blank => true} %>
    </div></div>
    <div class='line'><div class='field_name'>Title</div><div class='field_value'><%= f.text_field :title %></div></div>
    <div class='line'><div class='field_name'>Subject</div><div class='field_value'><%= f.text_field :subject %></div></div>
    <div class='line'><div class='field_name'>Content</div><div class='field_value'><%= f.text_area :content %></div></div>
    
    <%= f.submit 'Save' %>
<% end %>
