<div class="row">
    <div class="col-sm-4">
        <%= text_field_tag "#{arg_name}[#{ question.id }][response]", '', :class => "form-control", :'data-fv-notempty' => (question.mandatory ? 'true' : 'false') %>
    </div>
    <div class="col-sm-8">
        <label>
            <span class="radio-group">
                <%= radio_button_tag "#{arg_name}[#{ question.id }][response1]", 'Home', false, :'data-fv-notempty' => (question.mandatory ? 'true' : 'false') %>
                <%= t 'home' %>
            </span>
            <span class="radio-group">
                <%= radio_button_tag "#{arg_name}[#{ question.id }][response1]", 'Work', false, :'data-fv-notempty' => (question.mandatory ? 'true' : 'false') %>
                <%= t 'office' %>
            </span>
            <span class="radio-group">
                <%= radio_button_tag "#{arg_name}[#{ question.id }][response1]", 'Fax', false, :'data-fv-notempty' => (question.mandatory ? 'true' : 'false') %>
                <%= t 'fax' %>
            </span>
            <span class="radio-group">
                <%= radio_button_tag "#{arg_name}[#{ question.id }][response1]", 'Mobile', false, :'data-fv-notempty' => (question.mandatory ? 'true' : 'false') %>
                <%= t 'cell' %>
            </span>
        </label>
    </div>
</div>