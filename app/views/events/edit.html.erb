<h1> Edit an Event</h1>
<%= error_messages_for :event %>
<% form_for @event do |f| -%>
	<p>
		<%= f.label :title, "Title" %> <br>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :precis, "Precis" %> <br>
		<%= f.text_area :precis %>
	</p>
	<p>
		<%= f.label :duration, "Duration" %> <br>
		<%= f.text_field :duration %>
	</p>
	<p>
		<%= f.submit "Submit" %>
	</p>
<% end %>
