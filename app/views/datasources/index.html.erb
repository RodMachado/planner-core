<div class='container_12'>
<% if @datasources.blank? %>
   <p>There are not any datasources currently in the system.</p>
<% else %>
   <p>These are the current datasources in our system:</p>
   <ul>
   <% @datasources.each do |e| %>
      <li><h3><%= e.name %> primary: <%= e.primary%></h3> 
      <%= link_to 'Edit', {:action => "edit", :id => e.id} %>
      <%= link_to 'Delete', {:id => e.id, :action => "destroy"}, :confirm => "Are you sure you want to delete this datasource?", :method => :delete%>
      </li>
   <% end %>
   </ul>
<% end %>
<hr />
<p><%= link_to "Add new datasource", {:action => 'new' }%></p>
</div>
