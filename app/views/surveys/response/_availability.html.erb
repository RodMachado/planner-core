<%#
# This is the fragment for capturing the availability of a person...
# Time.zone.parse(SITE_CONFIG[:conference][:start_date])) (Time.zone.parse(SITE_CONFIG[:conference][:start_date])+SITE_CONFIG[:conference][:number_of_days].to_i.day)

%>

<div class=" availabilitySection grid_12">
    <div class="radiobutton">
        <label id='timedisable'>
            <%if @survey_response &&  @survey_response[question.id.to_s] && @survey_response[question.id.to_s]['response'] == '1' %>
                <%= radio_button_tag "survey_response[#{question.id}][question]", "1", :checked => 'checked' %>
            <%else%>
                <%= radio_button_tag "survey_response[#{question.id}][question]", "1" %>
            <%end%>
            I am available for Program for the complete duration of the convention.
        </label>
        <a><img src="/images/smerf_help.gif" alt="Help"></a>
    </div>
    <div class="radiobutton">
        <label id='timeselect'>
            <%if @survey_response &&  @survey_response[question.id.to_s] && @survey_response[question.id.to_s]['response'] == '2' %>
                <%= radio_button_tag "survey_response[#{question.id}][question]", "2", :checked => 'checked' %>
            <%else%>
                <%= radio_button_tag "survey_response[#{question.id}][question]", "2" %>
            <%end%>
            I plan to be at the convention. 
        </label>
        <a><img src="/images/smerf_help.gif" alt="Help"></a>
    </div>
    <div class=" grid_12">
        <div class="smerfSubquestion grid_6">I will be available to be on Program beginning:</div>
        <div class="select grid_4 timeselect">
            <%= select_tag "survey_response[#{question.id}][question1]",
                options_for_select(['Thu', 'Fri','Sat', 'Sun', 'Mon'].collect{ |e| [e, e]}, @survey_response &&  @survey_response[question.id.to_s] ? @survey_response[question.id.to_s]['response1'] : nil) %>
        </div>
    </div>
    <div class=" grid_12">
        <div class="smerfSubquestion grid_6">starting from:</div>
        <div class="select grid_4 timeselect">
            <%= select_tag "survey_response[#{question.id}][question2]",
                options_for_select(['---','10am', '11am','Noon', '1pm', '2pm', '3pm', '4pm', '5pm', '6pm', '7pm', '8pm', '9pm'].collect{ |e| [e, e]}, @survey_response &&  @survey_response[question.id.to_s] ? @survey_response[question.id.to_s]['response2'] : nil) %>
        </div>
    </div>
    <div class=" grid_12">
        <div class="smerfSubquestion grid_6">I will not be available for program after:</div>
        <div class="select grid_4 timeselect">
            <%= select_tag "survey_response[#{question.id}][question3]",
                options_for_select(['Thu', 'Fri','Sat', 'Sun', 'Mon'].collect{ |e| [e, e]}, @survey_response &&  @survey_response[question.id.to_s] ? @survey_response[question.id.to_s]['response3'] : nil) %>
        </div>
        <div class=" grid_12">
            <div class="smerfSubquestion grid_6">ending at:</div>
            <div class="select grid_4 timeselect">
                <%= select_tag "survey_response[#{question.id}][question4]",
                    options_for_select(['---','10am', '11am','Noon', '1pm', '2pm', '3pm', '4pm', '5pm', '6pm', '7pm', '8pm', '9pm'].collect{ |e| [e, e]}, @survey_response &&  @survey_response[question.id.to_s] ? @survey_response[question.id.to_s]['response4'] : nil) %>
            </div>
        </div>
    </div>
    <div class=" timeselect grid_12">
        <div class="checkbox">
            <label>
                <%= check_box_tag "survey_response[#{question.id}][question5]", "1", @survey_response && @survey_response[question.id.to_s] ? @survey_response[question.id.to_s]['response5'] == '1' : false %>
                I am extremely uncertain when I will be available to be on the Program
            </label>
            <a><img src="/images/smerf_help.gif" alt="Help"></a>
        </div>
    </div>
</div>

 