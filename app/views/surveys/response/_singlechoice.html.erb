%>

<%question.survey_answers.each do |answer|%>
    <% if question.horizontal %>
        <label class="radiobutton inline">
    <% else %>
        <label class="radiobutton">
    <% end %>
        <%= radio_button_tag "survey_response[#{question.id}]", "#{answer.id}", @survey_response ? @survey_response[question.id.to_s] == answer.id.to_s : false %>
        <%= answer.answer.html_safe %>
    </label>
<%end%>
