%>
<%question.survey_answers.each do |answer|%>
    <% if question.horizontal %>
        <label class="checkbox inline">
    <% else %>
        <label class="checkbox">
    <% end %>
        <%= check_box_tag "survey_response[#{question.id}][#{answer.id}]", "#{answer.answer}", @survey_response && @survey_response[question.id.to_s] ? @survey_response[question.id.to_s][answer.id.to_s] : false %>
        <%= answer.answer.html_safe %>
    </label>
<%end%>
