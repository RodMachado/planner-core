<div class='clear'></div>
<div class="survey-group">
    <h3>Personal Details</h3>
    <div class="grid_12">
      <a><img alt="Help" src="/images/smerf_help.gif" title="Enter your Registration name"></a>
      <div class="grid_3">Name</div>
        <% if @errors && @errors['first_name'] %>
        <div class="smerfQuestionError">
            <p>
            <img src="/images/smerf_error.gif?1322929610" alt="Error">
            <%=@errors['first_name']['First Name']%>
            </p>
        </div>
        <% end %>
        <div class="survey-question grid_3 mandatory"><div class="text"><input id="first_name" name="survey_respondent_detail[first_name]" size="30" title="First Name" type="text" value="<%=@survey_respondent_details['first_name'] if @survey_respondent_details %>"></div></div>
        <% if @errors && @errors['last_name'] %>
        <div class="smerfQuestionError">
            <p>
            <img src="/images/smerf_error.gif?1322929610" alt="Error">
            <%=@errors['last_name']['Last Name']%>
            </p>
        </div>
        <% end %>
        <div class="survey-question grid_3"><div class="text"><input id="last_name" name="survey_respondent_detail[last_name]" size="30" title="Last Name" type="text" value="<%=@survey_respondent_details['last_name'] if @survey_respondent_details %>"></div></div>
        <div class="survey-question grid_2"><div class="text"><input id="name_suffix" name="survey_respondent_detail[suffix]" size="5" title="Suffix" type="text" value="<%=@survey_respondent_details['suffix'] if @survey_respondent_details %>"></div></div>
    </div>
    <div class="grid_12">
        <div class="survey-question grid_3 mandatory" title="Enter your primary e-mail address; the one you&rsquo;re most likely to monitor.">E-mail Address <a><img src="/images/smerf_help.gif?" alt="Help"></a></div>
        <% if @errors && @errors['email'] %>
        <div class="smerfQuestionError">
            <p>
            <img src="/images/smerf_error.gif?1322929610" alt="Error">
            <%=@errors['email']['Email Address']%>
            </p>
        </div>
        <% end %>
        <div class="text grid_4"><input type="text" size="50" name="survey_respondent_detail[email]" id="email_address" value="<%=@survey_respondent_details['email'] if @survey_respondent_details %>"></div>
    </div>
</div>
