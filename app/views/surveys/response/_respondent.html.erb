
<h3><%= t 'Personal Details' %></h3>

<div class="control-group <%='error' if @errors && (@errors['first_name'] || @errors['last_name']) %>"">
    <label class="control-label"><%= t 'Name' %></label>
    <div class="controls">
        <input name="survey_respondent_detail[first_name]" value="<%=@survey_respondent_detail['first_name'] if @survey_respondent_detail %>" 
            size="30" type="text" class="col-xs-4" placeholder="First Name" required>
        <input name="survey_respondent_detail[last_name]" value="<%=@survey_respondent_detail['last_name'] if @survey_respondent_detail %>" 
            size="30" type="text" class="col-xs-4" placeholder="Last Name" required>
        <input name="survey_respondent_detail[suffix]" value="<%=@survey_respondent_detail['suffix'] if @survey_respondent_detail %>" 
            size="5" type="text" class="col-xs-1" placeholder="Suffix">
        <a class="survey-help" href="#" data-original-title="Enter your Registration name"><i class='icon-info-sign'></i></a>
        <% if @errors && @errors['first_name'] %>
            <span class="help-inline"><%=@errors['first_name']['First Name']%></span>
        <% end %>
        <% if @errors && @errors['last_name'] %>
            <span class="help-inline"><%=@errors['last_name']['Last Name']%></span>
        <% end %>
    </div>
</div>
<% if @respondent %>
<% if !(@survey_respondent_detail && (@survey_respondent_detail['pub_first_name'] || @survey_respondent_detail['pub_suffix'])) %>
<div class="control-group pubname_toggle">
<% else %>
<div class="control-group">
<% end %>
    <label class="control-label"><%= t 'Publication Name' %></label>
    <div class="controls">
        <input name="survey_respondent_detail[pub_first_name]" value="<%=@survey_respondent_detail['pub_first_name'] if @survey_respondent_detail %>" 
            size="30" type="text" class="col-xs-4" placeholder="First Name">
        <input name="survey_respondent_detail[pub_last_name]" value="<%=@survey_respondent_detail['pub_last_name'] if @survey_respondent_detail %>" 
            size="30" type="text" class="col-xs-4" placeholder="Last Name">
        <input name="survey_respondent_detail[pub_suffix]" value="<%=@survey_respondent_detail['pub_suffix'] if @survey_respondent_detail %>" 
            size="5" type="text" class="col-xs-1" placeholder="Suffix">
    </div>
</div>
<% end %>    
<div class="control-group  <%='error' if @errors && @errors['email'] %>">
    <label class="control-label"><%= t 'E-mail Address' %>
        <a class="survey-help" href="#" data-original-title="Enter your primary e-mail address; the one you&rsquo;re most likely to monitor."><i class='icon-info-sign'></i></a>
    </label>
    <div class="controls">
        <input name="survey_respondent_detail[email]" value="<%=@survey_respondent_detail['email'] if @survey_respondent_detail %>" 
            size="50" class="col-xs-6" type="email" required>
        <% if @errors && @errors['email'] %>
            <span class="help-inline"><%=@errors['email']['Email Address']%></span>
        <% end %>
    </div>
</div>
