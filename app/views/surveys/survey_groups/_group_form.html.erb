<%= form_for [@survey,@group], :url => @urlstr, :html => {:class => "layerform", :id => "layerform", :'accept-charset' => 'UTF-8'} do |f| %>
<div class='group_form'>
	<div class='line'><div class='field_name'>Name:</div><div class='field_value'><%= f.text_field :name %></div></div>
	<div class='line'><div class='field_name'>Alternative Name:</div><div class='field_value'><%= f.text_field :altname %></div></div>
	<div class='line'><div class='field_name'>Description:</div><div class='field_value'><%= f.text_field :description %></div></div>
    <div class='line'><div class='field_name'>Sort Order:</div><div class='field_value'><%= f.text_field :sort_order %></div></div>
    <%
    # ------------------------------------------------------------------------
    # The input area for format information
    %>
    <fieldset class="coolfieldset survey_group_format">
        <legend>Formatting</legend>
        <%= render :partial => 'surveys/format_form', :locals => {:param => 'survey_group[survey_format_attributes]'}, :object => @group.survey_format %>
    </fieldset>
    <%
    # ------------------------------------------------------------------------
    %>

    <div class='form-buttons'>
        <%= f.submit "Submit" %>
        <% if @group.id != nil %>
            <%= link_to "Cancel", survey_survey_group_path(@survey,@group) + '?show_questions=false', {:class =>'cancel-link'} %> <!-- TODO - change to a button ... -->
        <% end %>
    </div>
</div>
<% end %>
