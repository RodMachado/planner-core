<% content_for :submenu do %>
        <%= render_cell :context_menu, :display, :menu => {
            "manage-mailings" => ('/pages/communications_dash/manage' if allowed? :manage_mailings),
            #"mailing-reports" => ('/pages/communications_dash/report' if allowed? :mailing_reports),
            "mail-templates"  => ('/pages/communications_dash/templates' if allowed? :mailing_templates)
        }.keep_if{|k,v| v} %>
<% end %>

<% if @cellname %>
    <%= render_cell "communications/#{@cellname}", :display %>
<% else %>
    <%= render_cell "communications/communications_dash", :display %>
<% end %>
