<div class="program">
    <% @programmeItems.each do |item| %>
    <div class="program-line-item">
        <div class="program-item-time">
            <%= item.published_time_slot.start.strftime('%A %H:%M') %>
        </div>
        <div class="program-item-room">
            (<%= item.published_room.name %>)
        </div>
        <div class="program-item-duration">
            Duration: <%= item.duration.to_s %> minutes
        </div>
        <div class="program-item-title">
            <%= markdown(item.title) %>
        </div>
        <div class="program-item-description">
            <%= markdown(item.precis) %>
        </div>
        <div class="program-item-participants">
            <% item.people.each do |person| %>
            <div class="program-item-participant">
                <%= person.GetFullPublicationName %>
            </div>
            <% end %>
        </div>
    </div>
    <% end %>
</div>
