xml.rows do
  xml.page(@page)
  xml.total(@nbr_pages)
  xml.records(@people.size)
  @people.each do |person|
    xml.row({:id => person.id}) do
      xml.cell(person.first_name)
      xml.cell(person.last_name)
      xml.cell(person.suffix)
      xml.cell(person.mailing_number)
      if (person.invitestatus)
        xml.cell(person.invitestatus.name)
      end
      if (person.invitation_category)
        xml.cell(person.invitation_category.name)
      end
    end
  end
end

