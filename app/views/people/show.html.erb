<div class='people_show'>
  <div class='edit-form'>
      <%=  link_to "edit", {:controller => 'people', :action => 'edit', :id => @person}, :class => 'entrydialog' %>
  </div>
  <div class='line'>First Name:: <%= @person.first_name %></div>
  <div class='line'>Last Name: <%= @person.last_name %></div>
  <div class='line'>InviteStatus: <% if @person.invitestatus %>
       <%= @person.invitestatus.name %>
       <% end%>
  </div>
  <div class='line'>InviteCategory: <% if @person.invitation_category %>
       <%= @person.invitation_category.name %>
       <% end%>
  </div>
  <div class='message' id='tab-messages'></div>
  <div class="jqmWindow" id="edialog">Please wait...</div>
</div>
