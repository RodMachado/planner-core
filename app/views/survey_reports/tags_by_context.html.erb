<h2>Participants with tags by context</h2>

<% form_tag('/survey_reports/tags_by_context', :method => 'post') do %>
<p>
   <%= label_tag "Context: "%>
   <%= select 'tag', 'context', @contexts, {:include_blank => true} %>
   <%= submit_tag "Search" %>
</p>
<% end %>

<% if @names  %>
<%= render :partial => "resplist", :object => @names, :locals => {:context => @context } %> 
<% end %>
