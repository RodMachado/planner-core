<% content_for :cssheader do %>
<%= stylesheet_link_tag 'backgrid/backgrid' %>
<%= stylesheet_link_tag 'backgrid/extensions/text-cell/backgrid-text-cell' %>
<%= stylesheet_link_tag 'backgrid/extensions/paginator/backgrid-paginator' %>
<%= stylesheet_link_tag 'backgrid/extensions/filter/backgrid-filter' %>
<% end %>
<% content_for :jsheader do %>
    <%= javascript_include_tag 'lunr' %>
    <%= javascript_include_tag 'backbone/extensions/backbone-pageable' %>
    <%= javascript_include_tag 'backgrid/extensions/paginator/backgrid-paginator' %>
    <%= javascript_include_tag 'backgrid/extensions/filter/backgrid-filter' %>
  <%= render_cell :mailing, :javascript %>
<% end %>
<% content_for :styleheader do %>
.pagination {
    margin : 0 0;
    float: none;
}
<% end %>

<%= render_cell :mailing, :templates %>

<div class='row-fluid'>
    <div class='span3 mailings-area'>
        <div class='mailing-configs-control' id='mailing-configs-control'>
        </div>
    </div>
    <div class='span9 mailings-config-area'>
        <div class='current-mailing-configs' id='current-mailing-configs'>
        </div>
    </div>
</div>
<div class='row-fluid'>
    <div class='span4 mailings-people-area'>
        <div class='row-fluid'>
            <div class='span12 mailing-people-pager' id='mailing-people-pager'></div>
            <div class='row-fluid'>
                <ul class='span12 mailing-people selectable' id='mailing-people'></ul>
            </div>
        </div>
    </div>
    <div class='span2'>
        <div class='mailing-people-controls' id='mailing-people-controls'>
        </div>
    </div>
    <div class='span6 mailings-assigned-people-area'>
        <div class='current-mailing-control' id='current-mailing-control'>
        </div>
        <ul class='current-mailing-people selectable' id='current-mailing-people'>
        </ul>
    </div>
</div>
