<div id='item-conflict-report'>
    <%@conflicts.each do |conflict| %>
    <div class='selectable item-conflict ui-widget-content'>
        <div class="itemid" style="display: none;"><%= conflict[5] %></div>
        <div><em><%= conflict[3] %> <%= conflict[4] %></em> has a conflict</div>
        <div><%= conflict[1] %> : <b><%= conflict[6] %></b> at <%= conflict[7].to_datetime.in_time_zone.strftime('%H:%M %A') %> with</div>
        <div><%= conflict[9] %> : <b><%= conflict[11] %></b> at <%= conflict[12].to_datetime.in_time_zone.strftime('%H:%M %A') %></div>
    </div>
    <%end %>
</div>
