  <!-- Handle notice messages -->
  <%= get_notice_messages() %>
  <!-- Handle error messages -->       
  <%= get_error_messages(@errors) %>
  <!-- Specify page title -->
  <%= smerf_title() %>
  <!-- Display form welcome message -->
  <%= smerf_welcome() %>
<fieldset id="survey-set">
  <!-- Display groups and the questions within each group -->
  <% smerf_get_groups().each do |group| %>
    <!-- Display the group name and description -->
	<div class='clear'></div>
    <div class="surveyGroup" id="surveyGroup<%= group.code %>">
      <%= smerf_group_name(group) %>
	<% style = "smerfGroup"
	   style += " " + group.style if group.style
    %>
    <% content_tag :div, :class => style do %>
	  <%= smerf_group_help(group) %>
      <%= smerf_group_description(group) %>
      <!-- Display the questions within the group -->
      <% smerf_get_group_questions(group).each do |question| %>
        <%= smerf_group_question(question)[:content] %>
      <% end %>
	<% end %>
    </div>
  <% end %>
</fieldset>
  <!-- Display form thank you -->
  <%= smerf_thank_you() %>
  <!-- Add save button -->
  <div class="submit">
    <p>
    <%= submit_tag 'Press to Save your answers' %>
    </p>                        
  </div> 
  <%= hidden_field_tag("smerf_form_id", @smerfform.id) %>
  <%= hidden_field_tag("key", @current_key) %>
  <!-- Put in the files for the name and address -->
  <div style='display : none;'>
  	<div id='pre_first_name'><%= @respondent.first_name %></div>
  	<div id='pre_last_name'><%= @respondent.last_name %></div>
	<div id='pre_suffix'><%= @respondent.suffix %></div>
  	<div id='pre_email'><%= @respondent.email %></div>
	<%if @respondent.person %>
		<%if @respondent.person.pseudonym %>
  			<div id='pre_pub_first_name'><%= @respondent.person.pseudonym.first_name %></div>
  			<div id='pre_pub_last_name'><%= @respondent.person.pseudonym.last_name %></div>
  			<div id='pre_pub_suffix'><%= @respondent.person.pseudonym.suffix %></div>
		<%end%>
  		<div id='pre_postal_street'><%= @respondent.person.getDefaultPostalAddress.line1 if @respondent.person.getDefaultPostalAddress %></div>
  		<div id='pre_postal_city'><%= @respondent.person.getDefaultPostalAddress.city if @respondent.person.getDefaultPostalAddress %></div>
  		<div id='pre_postal_state'><%= @respondent.person.getDefaultPostalAddress.state if @respondent.person.getDefaultPostalAddress %></div>
  		<div id='pre_postal_zip'><%= @respondent.person.getDefaultPostalAddress.postcode if @respondent.person.getDefaultPostalAddress %></div>
  		<div id='pre_postal_country'><%= @respondent.person.getDefaultPostalAddress.country if @respondent.person.getDefaultPostalAddress %></div>
	<%end%>
  </div>
  